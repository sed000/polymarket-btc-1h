# Wallet private key (required for real trading)
# Export from Magic.link (Polymarket settings > Export Private Key)
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Signature type for your wallet
# 0 = EOA (MetaMask direct)
# 1 = Poly Proxy (Magic.link / email sign-up)
# 2 = Gnosis Safe
SIGNATURE_TYPE=1

# Your Polymarket wallet address (the proxy wallet, NOT the Magic.link EOA)
# Find this on Polymarket website - it's your deposit address
FUNDER_ADDRESS=0x31321312

# Polymarket API credentials (OPTIONAL - auto-generated from wallet if not provided)
# These are derived from your wallet, not from a Polymarket dashboard
# Builder API keys can be used here if you have them
# POLY_API_KEY=
# POLY_API_SECRET=
# POLY_API_PASSPHRASE=


PAPER_TRADING=true
PAPER_BALANCE=10


# Compound limit (profit taking)
COMPOUND_LIMIT=50      # Take profit when balance exceeds this (0 = disabled)
BASE_BALANCE=30         # Reset to this balance after taking profit


ENTRY_THRESHOLD=0.90    # Buy when price >= this (min entry)
MAX_ENTRY_PRICE=0.98    # Don't buy above this (avoid ceiling)
STOP_LOSS=0.80          # Sell when price drops to this level
MAX_SPREAD=0.03         # Skip markets with bid-ask spread > $0.03
TIME_WINDOW_MINS=10     # Only enter within this many minutes of expiry



# Bot settings
POLL_INTERVAL_MS=10000  # Check markets every 10 seconds
MAX_POSITIONS=1         # Max concurrent positions


# =============================================================================
# BACKTEST CONFIGURATION
# =============================================================================
# These settings are ONLY used by the backtester, not the live bot

BACKTEST_ENTRY_THRESHOLD=0.93    # Min entry price
BACKTEST_MAX_ENTRY_PRICE=0.98     # Max entry price
BACKTEST_STOP_LOSS=0.89           # Stop loss threshold
BACKTEST_PROFIT_TARGET=0.98      # Sell when price reaches this (take profit)
BACKTEST_MAX_SPREAD=0.05          # Max bid-ask spread
BACKTEST_TIME_WINDOW_MINS=15      # Time window before market expiry
BACKTEST_STARTING_BALANCE=10  # Starting balance for simulation
BACKTEST_DAYS=7                   # Default days to backtest
BACKTEST_COMPOUND_LIMIT=50        # Take profit when balance exceeds this (0 = disabled)
BACKTEST_BASE_BALANCE=30          # Reset to this balance after taking profit
